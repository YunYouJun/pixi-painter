{
  "name": "pixi-painter",
  "type": "module",
  "version": "0.0.4-beta.0",
  "private": true,
  "packageManager": "pnpm@8.12.1",
  "description": "Painter based on Pixi.JS",
  "author": {
    "email": "me@yunyoujun.cn",
    "name": "YunYouJun",
    "url": "https://yunyoujun.cn"
  },
  "license": "MPL-2.0",
  "keywords": [],
  "scripts": {
    "build": "pnpm build:lib && pnpm build:site",
    "build:lib": "pnpm -C packages/pixi-painter run build",
    "build:site": "pnpm -C site run build",
    "dev": "pnpm -C site run dev",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "release": "bumpp && pnpm -C packages/pixi-painter run release"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.6",
    "bumpp": "^9.2.1",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
